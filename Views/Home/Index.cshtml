@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}

<table class="table table-striped table-bordered">
<thead>
    <tr>
        <th style="width: 100px;">@Html.DisplayNameFor(m => m.ProductID)</th>
        <th style="width: 100px;">@Html.DisplayNameFor(m => m.Image)</th>
        <th >@Html.DisplayNameFor(m => m.Name)</th>
        <th style="width: 100px;">@Html.DisplayNameFor(m => m.Price)</th>
        <th style="width: 100px;">Actions</th> <!-- Son th başlığı ekledim -->
    </tr>
</thead>
<tbody>
    @foreach (var prd in Model)
    {
        <tr>
            <td>@prd.ProductID</td>
            <td>
                <img src="@Url.Content("~/img/" + prd.Image)" class="img-fluid" alt="" style="max-height: 100px;" />
            </td>
            <td>@prd.Name</td>
            <td>@prd.Price.ToString("C")</td> <!-- Currency formatı için -->
            <td>
                <a href="#" class="btn btn-sm btn-primary">Edit</a>
                <a href="#" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
</tbody>
</table>
